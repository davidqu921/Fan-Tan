/**app.wxss**/
/* 全局样式 - 基于PRD文档中的设计规范 */

/* 设计规范变量 */
page {
  --primary-color: #4CAF50;
  --secondary-color: #FF6B35;
  --background-color: #F8F9FA;
  --text-color: #333333;
  --border-color: #E0E0E0;
  --text-light: #999999;
  --white: #ffffff;
  
  /* 字体规范 */
  --font-title: 32rpx;
  --font-subtitle: 28rpx;
  --font-body: 26rpx;
  --font-caption: 24rpx;
  
  /* 圆角规范 */
  --radius-card: 16rpx;
  --radius-button: 24rpx;
  --radius-input: 12rpx;
  
  background-color: var(--background-color);
  color: var(--text-color);
  font-size: var(--font-body);
  line-height: 1.6;
}

/* 通用容器 */
.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: var(--white);
  border-radius: var(--radius-card);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.btn {
  border-radius: var(--radius-button);
  font-size: var(--font-body);
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: var(--primary-color);
  color: var(--white);
}

.btn-primary:active {
  background-color: #45a049;
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: var(--white);
}

.btn-secondary:active {
  background-color: #e55a2b;
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-outline:active {
  background-color: var(--primary-color);
  color: var(--white);
}

.btn-disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: var(--font-body);
  color: var(--text-color);
  margin-bottom: 16rpx;
  display: block;
}

.input-required::after {
  content: ' *';
  color: var(--secondary-color);
}

.input-field {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-input);
  font-size: var(--font-body);
  background-color: var(--white);
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--primary-color);
}

/* 文本样式 */
.text-title {
  font-size: var(--font-title);
  font-weight: bold;
  color: var(--text-color);
}

.text-subtitle {
  font-size: var(--font-subtitle);
  font-weight: 500;
  color: var(--text-color);
}

.text-body {
  font-size: var(--font-body);
  color: var(--text-color);
}

.text-caption {
  font-size: var(--font-caption);
  color: var(--text-light);
}

.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--secondary-color);
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距样式 */
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.ml-16 { margin-left: 16rpx; }
.mr-16 { margin-right: 16rpx; }

.p-16 { padding: 16rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }

/* 状态标签 */
.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: var(--font-caption);
  font-weight: 500;
}

.status-active {
  background-color: #e8f5e8;
  color: var(--primary-color);
}

.status-full {
  background-color: #ffe8e8;
  color: var(--secondary-color);
}

.status-ended {
  background-color: #f0f0f0;
  color: var(--text-light);
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: var(--text-light);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  color: var(--text-light);
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: var(--border-color);
  margin: 24rpx 0;
}

/* 头像样式 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: var(--border-color);
  object-fit: cover;
  border: 2rpx solid var(--white);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: var(--border-color);
  object-fit: cover;
  border: 2rpx solid var(--white);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: var(--border-color);
  object-fit: cover;
  border: 3rpx solid var(--white);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 进度条 */
.progress-bar {
  height: 8rpx;
  background-color: var(--border-color);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: var(--primary-color);
  transition: width 0.3s ease;
}
