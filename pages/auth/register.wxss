/* pages/auth/register.wxss */

.container {
  padding: 0;
  background-color: var(--background-color);
  min-height: 100vh;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  z-index: -1;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.2;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(248, 249, 250, 0.95), rgba(248, 249, 250, 0.98));
}

/* 注册表单 */
.register-form {
  margin: 80rpx 32rpx 24rpx;
  padding: 40rpx 32rpx;
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-title {
  display: block;
  margin-bottom: 12rpx;
  color: var(--primary-color);
}

.form-subtitle {
  color: var(--text-light);
}

/* 输入组 */
.input-group {
  margin-bottom: 24rpx;
  position: relative;
}

.input-label {
  display: block;
  font-size: var(--font-body);
  color: var(--text-color);
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-required::after {
  content: ' *';
  color: var(--secondary-color);
}

.input-field {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-input);
  font-size: var(--font-body);
  line-height: 88rpx;
  background-color: var(--white);
  color: var(--text-color);
  box-sizing: border-box;
  transition: border-color 0.3s ease;
  vertical-align: middle;
}

.input-field:focus {
  border-color: var(--primary-color);
}

/* 密码显示切换 */
.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50rpx;
  padding: 8rpx;
}

.toggle-icon {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 管理员字段 */
.admin-fields {
  margin: 24rpx 0;
}

.admin-notice {
  display: flex;
  align-items: flex-start;
  padding: 16rpx;
  background-color: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: var(--radius-input);
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  margin-top: 2rpx;
}

.notice-text {
  flex: 1;
  line-height: 1.4;
  color: #856404;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 88rpx;
  font-size: var(--font-body);
  font-weight: 500;
  margin-top: 24rpx;
}

.register-btn:disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 表单底部 */
.form-footer {
  text-align: center;
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer-text {
  margin-right: 8rpx;
}

.link-text {
  color: var(--primary-color);
  text-decoration: underline;
}
