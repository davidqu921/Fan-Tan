/* pages/auth/login.wxss */

.container {
  padding: 0;
  background-color: var(--background-color);
  min-height: 100vh;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: -1;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.3;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(248, 249, 250, 0.9), rgba(248, 249, 250, 0.95));
}

/* 登录表单 */
.login-form {
  margin: 120rpx 32rpx 24rpx;
  padding: 40rpx 32rpx;
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-title {
  display: block;
  margin-bottom: 12rpx;
  color: var(--primary-color);
}

.form-subtitle {
  color: var(--text-light);
}

/* 输入组 */
.input-group {
  margin-bottom: 32rpx;
  position: relative;
}

.input-label {
  display: block;
  font-size: var(--font-body);
  color: var(--text-color);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-required::after {
  content: ' *';
  color: var(--secondary-color);
}

.input-field {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-input);
  font-size: var(--font-body);
  line-height: 88rpx;
  background-color: var(--white);
  color: var(--text-color);
  box-sizing: border-box;
  transition: border-color 0.3s ease;
  vertical-align: middle;
}

.input-field:focus {
  border-color: var(--primary-color);
}

/* 密码显示切换 */
.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50rpx;
  padding: 8rpx;
}

.toggle-icon {
  font-size: 32rpx;
  color: var(--text-light);
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  font-size: var(--font-body);
  font-weight: 500;
  margin-top: 24rpx;
}

.login-btn:disabled {
  background-color: #cccccc;
  color: #999999;
}

/* 表单底部 */
.form-footer {
  text-align: center;
  margin-top: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer-text {
  margin-right: 8rpx;
}

.link-text {
  color: var(--primary-color);
  text-decoration: underline;
}

/* 快速选项 */
.quick-options {
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
}

.options-title {
  text-align: center;
  margin-bottom: 24rpx;
  color: var(--text-color);
}

.options-list {
  display: flex;
  gap: 16rpx;
}

.option-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
}

.option-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.option-text {
  font-size: var(--font-caption);
}
