/* pages/admin/users.wxss */

.container {
  padding: 0;
  background-color: var(--background-color);
  min-height: 100vh;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  z-index: -1;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.2;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(248, 249, 250, 0.95), rgba(248, 249, 250, 0.98));
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 40rpx 32rpx 24rpx;
}

.page-title {
  display: block;
  margin-bottom: 8rpx;
  color: var(--primary-color);
}

.page-subtitle {
  color: var(--text-light);
}

/* 统计区域 */
.stats-section {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx 24rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stat-label {
  color: var(--text-light);
}

/* 用户列表区域 */
.users-section {
  padding: 0 32rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  color: var(--text-color);
}

.refresh-btn {
  height: 60rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-icon {
  font-size: 24rpx;
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  text-align: center;
  padding: 80rpx 0;
}

.loading-text,
.empty-text {
  color: var(--text-light);
}

.empty-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

/* 用户列表 */
.users-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.user-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  gap: 20rpx;
}

.user-avatar {
  flex-shrink: 0;
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.name {
  color: var(--text-color);
  font-weight: 500;
}

.role-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.role-badge.admin {
  background-color: #e3f2fd;
  color: #1976d2;
}

.role-badge.user {
  background-color: #f3e5f5;
  color: #7b1fa2;
}

.role-text {
  font-size: 20rpx;
}

.user-details {
  margin-bottom: 8rpx;
}

.detail-item {
  display: block;
  color: var(--text-light);
  margin-bottom: 4rpx;
}

.user-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-item {
  color: var(--text-light);
}

.status-badge {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.status-badge.active {
  background-color: #e8f5e8;
  color: #2e7d32;
}

.status-badge.inactive {
  background-color: #ffebee;
  color: #c62828;
}

.user-actions {
  flex-shrink: 0;
}

.action-btn {
  height: 60rpx;
  padding: 0 16rpx;
  font-size: 24rpx;
}
