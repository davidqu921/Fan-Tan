/* pages/admin/create.wxss */
.container {
  min-height: 100vh;
  background-color: var(--bg-light);
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: var(--white);
  border-bottom: 1rpx solid var(--border-color);
}

.header-left {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: var(--text-color);
  font-weight: bold;
}

.page-title {
  font-size: var(--font-title);
  font-weight: var(--font-weight-bold);
  color: var(--text-color);
}

.header-right {
  width: 80rpx;
}

/* 表单容器 */
.form-container {
  padding: 32rpx;
}

.form-section {
  background-color: var(--white);
  border-radius: var(--radius-card);
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: var(--font-body);
  font-weight: var(--font-weight-medium);
  color: var(--text-color);
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-input);
  font-size: var(--font-body);
  background-color: var(--white);
  color: var(--text-color);
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--primary-color);
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-input);
  font-size: var(--font-body);
  background-color: var(--white);
  color: var(--text-color);
  box-sizing: border-box;
  line-height: 1.5;
}

.form-textarea:focus {
  border-color: var(--primary-color);
}

/* 选择器 */
.picker-input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-input);
  background-color: var(--white);
}

.picker-text {
  font-size: var(--font-body);
  color: var(--text-color);
}

.picker-text.placeholder {
  color: var(--text-light);
}

.picker-arrow {
  font-size: 24rpx;
  color: var(--text-light);
}

.form-hint {
  display: block;
  font-size: 24rpx;
  color: var(--text-light);
  margin-top: 8rpx;
  line-height: 1.4;
}

/* 日期时间选择器组 */
.datetime-picker-group {
  display: flex;
  gap: 16rpx;
}

.datetime-picker {
  flex: 1;
}

/* 提交按钮 */
.submit-section {
  padding: 0 32rpx 32rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  border-radius: var(--radius-button);
  font-size: var(--font-body);
  font-weight: var(--font-weight-medium);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.active {
  background-color: var(--primary-color);
  color: var(--white);
}

.submit-btn.disabled {
  background-color: var(--border-color);
  color: var(--text-light);
}

.submit-btn:active {
  opacity: 0.8;
}
