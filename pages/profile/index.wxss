/* pages/profile/index.wxss */

.container {
  padding: 0;
  background-color: var(--background-color);
  min-height: 100vh;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 350rpx;
  z-index: -1;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.2;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(248, 249, 250, 0.85), rgba(248, 249, 250, 0.95));
}

/* 用户信息区域 */
.user-info-section {
  margin: 24rpx 32rpx;
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
}

.user-avatar {
  margin-right: 24rpx;
}

/* 头像样式已在全局样式中定义 */

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.user-desc {
  color: var(--text-light);
}

.login-btn {
  padding: 16rpx 32rpx;
  font-size: var(--font-body);
  min-width: 120rpx;
}

/* 统计信息 */
.stats-section {
  margin: 0 32rpx 24rpx;
  display: flex;
  justify-content: space-around;
  padding: 32rpx;
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 12rpx;
}

.stats-label {
  font-size: var(--font-caption);
  color: var(--text-light);
}

/* 菜单区域 */
.menu-section {
  padding: 0 32rpx;
}

.menu-group {
  margin-bottom: 24rpx;
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid var(--border-color);
  transition: background-color 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: var(--background-color);
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--text-light);
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 32rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  font-size: var(--font-body);
}
