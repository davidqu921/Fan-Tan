/* pages/activity/join.wxss */

.container {
  padding: 0 0 120rpx 0;
  background-color: var(--background-color);
  min-height: 100vh;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 250rpx;
  z-index: -1;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.25;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(248, 249, 250, 0.9), rgba(248, 249, 250, 0.98));
}

/* 活动预览 */
.activity-preview {
  margin: 24rpx 32rpx;
}

.activity-title {
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-text {
  font-size: var(--font-body);
  color: var(--text-color);
  line-height: 1.4;
}

/* 报名表单 */
.join-form {
  margin: 0 32rpx 24rpx;
}

.form-title {
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

/* 输入组 */
.input-group {
  margin-bottom: 32rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: var(--font-body);
  color: var(--text-color);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-required::after {
  content: ' *';
  color: var(--secondary-color);
}

.input-field {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-input);
  font-size: var(--font-body);
  background-color: var(--white);
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.input-field:focus {
  border-color: var(--primary-color);
}

.textarea-field {
  min-height: 120rpx;
  line-height: 1.5;
  resize: none;
}

.input-hint {
  display: block;
  margin-top: 12rpx;
  color: var(--text-light);
}

.char-count {
  text-align: right;
  margin-top: 12rpx;
}

/* 报名须知 */
.notice-section {
  margin: 0 32rpx 24rpx;
}

.notice-title {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  line-height: 1.5;
  color: var(--text-color);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--white);
  padding: 24rpx 32rpx;
  border-top: 2rpx solid var(--border-color);
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  font-size: var(--font-body);
  font-weight: 500;
}

.submit-btn:disabled {
  background-color: #cccccc;
  color: #999999;
}
