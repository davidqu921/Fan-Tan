/* pages/activity/detail.wxss */

.container {
  padding: 0 0 120rpx 0;
  background-color: var(--background-color);
  min-height: 100vh;
  position: relative;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: -1;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.3;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(248, 249, 250, 0.8), rgba(248, 249, 250, 0.95));
}

/* 活动信息卡片 */
.activity-info-card {
  margin: 24rpx 32rpx;
}

.activity-title {
  margin-bottom: 32rpx;
  line-height: 1.4;
}

/* 活动元信息 */
.activity-meta {
  margin-bottom: 32rpx;
}

.meta-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.meta-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
  width: 40rpx;
  text-align: center;
}

.meta-content {
  flex: 1;
}

.meta-label {
  display: block;
  font-size: var(--font-caption);
  color: var(--text-light);
  margin-bottom: 8rpx;
}

.meta-value {
  display: block;
  font-size: var(--font-body);
  color: var(--text-color);
  line-height: 1.4;
}

/* 报名统计 */
.join-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 2rpx solid var(--border-color);
  border-bottom: 2rpx solid var(--border-color);
  margin-bottom: 24rpx;
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: var(--font-caption);
  color: var(--text-light);
}

/* 进度条区域 */
.progress-section {
  margin-top: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

/* 报名列表区域 */
.joiners-section {
  margin: 0 32rpx 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.section-title {
  margin-right: 12rpx;
}

.section-count {
  color: var(--text-light);
}

.empty-joiners {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
}

/* 报名用户列表 */
.joiners-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.joiner-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.joiner-item:last-child {
  border-bottom: none;
}

.joiner-info {
  flex: 1;
  margin-left: 20rpx;
}

.joiner-name {
  display: block;
  margin-bottom: 8rpx;
}

.join-time {
  color: var(--text-light);
}

.joiner-contact {
  max-width: 200rpx;
}

.contact-text {
  color: var(--text-light);
  word-break: break-all;
}

/* 评论区 */
.comments-section {
  margin: 0 32rpx 24rpx;
}

/* 评论输入框 */
.comment-input {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: var(--background-color);
  border-radius: var(--radius-input);
}

.comment-field {
  flex: 1;
  font-size: var(--font-body);
  color: var(--text-color);
  margin-right: 16rpx;
}

.comment-btn {
  padding: 16rpx 32rpx;
  font-size: var(--font-body);
  min-width: 120rpx;
}

/* 评论列表 */
.empty-comments {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
}

.comments-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.comment-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-content {
  flex: 1;
  margin-left: 20rpx;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.comment-author {
  margin-right: 16rpx;
}

.comment-time {
  color: var(--text-light);
}

.comment-text {
  line-height: 1.5;
  word-break: break-all;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--white);
  padding: 24rpx 32rpx;
  border-top: 2rpx solid var(--border-color);
  z-index: 100;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  font-size: var(--font-body);
  font-weight: 500;
}
