/* pages/index/index.wxss */

.container {
  padding: 0;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 英雄区域 */
.hero-section {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.hero-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(76, 175, 80, 0.85), rgba(255, 107, 53, 0.75));
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 40rpx;
}

.hero-title {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--white);
  margin-bottom: 16rpx;
  text-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.5);
}

.hero-subtitle {
  font-size: 28rpx;
  color: var(--white);
  opacity: 0.95;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

/* 搜索栏 */
.search-bar {
  background: var(--white);
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.search-input {
  display: flex;
  align-items: center;
  background: var(--background-color);
  border-radius: var(--radius-input);
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: var(--text-light);
}

.search-input input {
  flex: 1;
  font-size: var(--font-body);
  color: var(--text-color);
}

/* 活动列表 */
.activity-list {
  padding: 24rpx 32rpx;
}

/* 活动卡片 */
.activity-card {
  background: var(--white);
  border-radius: var(--radius-card);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.activity-card:active {
  transform: scale(0.98);
}

/* 活动头部 */
.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.activity-title {
  flex: 1;
  margin-right: 16rpx;
  line-height: 1.4;
}

/* 活动信息 */
.activity-info {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  width: 32rpx;
  text-align: center;
}

.info-text {
  flex: 1;
  font-size: var(--font-body);
  color: var(--text-color);
  line-height: 1.4;
}

/* 报名进度 */
.activity-progress {
  margin-bottom: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.progress-bar {
  height: 8rpx;
  background-color: var(--border-color);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: var(--primary-color);
  transition: width 0.3s ease;
}

/* 最近报名用户 */
.recent-joiners {
  border-top: 2rpx solid var(--border-color);
  padding-top: 24rpx;
}

.joiners-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.joiner-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  margin-bottom: 12rpx;
}

.joiner-name {
  font-size: var(--font-caption);
  color: var(--text-color);
  margin-left: 12rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  z-index: 100;
}

.fab:active {
  transform: scale(0.95);
}

.fab-icon {
  font-size: 48rpx;
  color: var(--white);
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: var(--text-light);
}

.empty-state .icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  display: block;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: var(--text-light);
  font-size: var(--font-body);
}
